<body> 
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
            <div class="navbar-nav">
                <a class="nav-link active" href="/users/index">Home</a>
                <a class="nav-link" href="/schedules/new">New planner</a>
                
            </div>
            <a class="nav-item ml-auto" href="/logout"><button type="submit" class="btn btn-danger">Log out</button></a>
        </div>
    </nav>
   
    <div class="container-xl justify-content-center mt-2 pt-2">
        <div class="row justify-content-center m-4 p-4">
            <div class="col-md-12">
               <%# <p>successful login for !</p>    %>
                <div class="row">
                    <div class="col-md-10">
                        <%if @tables.empty?%>
                            <h1>You have no planners make one now!</h1>
                            <a href="/schedules/new"><button type="submit" class="btn btn-success">New Planner</button></a>
                        <%else%>
                            <table class="table mb-5 pb-5">
                            <%@tables.each do |t| %>
                                <h2 id="#<%=t.title.capitalize%>"><%=t.title.capitalize%></h2>
                                <thead class="thead-light">
                                    <tr>
                                        <th scope="col">#</th>
                                        <%t.heading.each do |heading|%>
                                            <th scope="col"><%=heading.strip%></th>
                                        <%end%>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <th scope="row">1</th>
                                        <td>Mark</td>
                                    </tr>
                                </tbody>
                            </table>
                        <%end%>
                    <%end%>
                    </div>
                    <div class="col-md-2 justify-content-center">
                        <h4>Planners</h4>
                        <%if @tables.empty?%>
                            <p>None</p>
                        <%else%>
                        <ul class="nav flex-column">
                            <li class="nav-item text-dark">
                                <%@tables.each do |t|%>
                                    <a class="nav-link active" href="#<%=t.title.capitalize%>"><%=t.title.capitalize%></a>
                                <%end%>
                            </li>
                        </ul>
                        <%end%>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>