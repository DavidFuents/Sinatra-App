                                        <td>Otto</td>
                                        <td>@mdo</td>
                                    </tr>
                                    <tr>
                                        <th scope="row">2</th>
                                        <td>Jacob</td>
                                        <td>Thornton</td>
                                        <td>@fat</td>
                                    </tr>
                                    <tr>
                                        <th scope="row">3</th>
                                        <td>Larry</td>
                                        <td>the Bird</td>
                                        <td>@twitter</td>
                                    </tr>
                                </tbody>
                            </table>
                        <%end%>
                    <%#end%>
                    </div>
                    <div class="col-md-2 justify-content-center">
                        <h4>Planners</h4>
                        <%if @tables.empty?%>
                            <p>None</p>
                        <%else%>
                        <ul class="nav flex-column">
                            <li class="nav-item text-dark">
                                <%@tables.each do |t|%>
                                    <a class="nav-link active" href="#<%=t.title%>"><%=t.title%></a>
                                <%end%>
                            </li>
                        </ul>
                        <%end%>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>